# Apache (.htaccess) for Next.js static export (SPA fallback)
#
# Put this file into the exported folder root (where index.html is),
# so refresh on routes like /documents/new/ works.

Options -MultiViews

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # If the request is an existing file or directory, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Otherwise, fallback to index.html (client-side routing)
  RewriteRule ^ index.html [L]
</IfModule>
